<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to 'Epistler', root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "About Us", home_about_path, class:"nav-link" %>
        </li>

        <% if user_signed_in? %>

          <li class="nav-item">
            <%= link_to "Templates", templates_path, class:"nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Recipients", recipients_path, class:"nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Recipients Lists", recipients_lists_path, class:"nav-link" %>
          </li>

        <% end %>
      </ul>
      <ul class="navbar-nav me-auto me-2 me-lg-0">

        <% if user_signed_in? %>

          <li class="nav-item">
            <% name = 'profile' %>
            <% if current_user.name && current_user.name.size > 0%>
              <% name = current_user.name %>
              <% if current_user.surname && current_user.surname.size > 0 %>
                <% name += ' ' + current_user.surname %>
              <% end %>
            <% elsif current_user.surname && current_user.surname.size > 0%>
              <% name = current_user.surname %>
            <% end %>
            <% name = name.strip.titleize %>
            <%= link_to name, edit_user_registration_path, class:"nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"nav-link" %>
